{
  "name": "inventaire",
  "version": "0.0.1",
  "description": "Todo",
  "main": "dist/entry.js",
  "scripts": {
    "dev": "kotatsu serve --config ./webpack.config.dev.js --progress --babel --index ./index.html --public ./ ./src/main.js",
    "build": "npm run fetch-data;kotatsu build client ./src/main.js -o build  --progress --config ./webpack.config.prod.js --babel",
    "lint": "eslint --fix src",
    "comb": "csscomb src",
    "test": "mocha --compilers js:babel-core/register -R spec --recursive $(find src -name '*.spec.js')",
    "deploy": "npm run build && npm run fetch-data && surge ./",
    "build-for-ghp": "rm -rf docs;mkdir docs;cp -a build docs/build;cp -a data docs/data;cp index.html docs/index.html",
    "fetch-data": "node fetch-data",
    "add-fetched-data": "git add data",
    "add-docs": "git add docs"
  },
  "pre-commit": [
    "lint",
    "build",
    "comb",
    "fetch-data",
    "build-for-ghp",
    "add-docs"
  ],
  "author": "Robin de Mourat <robin.demourat@gmail.com> (https://github.com/robindemourat)",
  "engines": {
    "node": ">= 6.6"
  },
  "dependencies": {
    "net": "^1.0.2",
    "prop-types": "^15.6.0",
    "react": "^16.1.1",
    "react-dom": "^16.1.1",
    "react-dropzone": "^4.2.3",
    "react-image-gallery": "^0.8.6",
    "react-player": "^0.25.3",
    "react-redux": "^5.0.4",
    "react-router": "^3.2.0",
    "react-router-redux": "^4.0.8",
    "redux": "^3.6.0",
    "redux-i18n": "^1.1.4",
    "reselect": "^3.0.1",
    "tabletop": "^1.5.2",
    "tls": "0.0.1"
  },
  "devDependencies": {
    "@robindemourat/eslint-config": "git+https://github.com/robindemourat/eslint-config.git",
    "axios": "^0.17.1",
    "babel-core": "^6.17.0",
    "babel-eslint": "^8.0.1",
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-plugin-transform-decorators": "^6.13.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.11.1",
    "babel-template": "^6.26.0",
    "chai": "^4.1.0",
    "colors": "^1.1.2",
    "css-loader": "^0.28.0",
    "csscomb": "^4.0.1",
    "enzyme": "^3.1.0",
    "eslint": "^4.3.0",
    "eslint-plugin-react": "^7.5.1",
    "file-loader": "^1.1.5",
    "fs-extra": "^4.0.2",
    "image-webpack-loader": "^3.3.0",
    "kotatsu": "git+https://github.com/robindemourat/kotatsu.git",
    "mocha": "^4.0.1",
    "node-sass": "^4.5.2",
    "optimist": "^0.6.1",
    "pre-commit": "^1.2.2",
    "raw-loader": "^0.5.1",
    "react-addons-test-utils": "^15.3.2",
    "sass-loader": "^6.0.3",
    "style-loader": "^0.19.0",
    "uglify-es": "^3.0.28",
    "uglifyjs-webpack-plugin": "^1.1.0",
    "webpack": "^3.5.5",
    "wrench": "^1.5.9"
  },
  "babel": {
    "plugins": [
      "transform-decorators-legacy",
      "transform-decorators",
      "transform-object-rest-spread",
      "transform-class-properties"
    ],
    "presets": [
      "es2015",
      "react"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "@robindemourat/eslint-config/es7",
      "@robindemourat/eslint-config/react"
    ],
    "rules": {
      "require-jsdoc": 2,
      "react/forbid-prop-types": 0,
      "react/jsx-no-bind": 0,
      "no-irregular-whitespace": 0
    }
  }
}
